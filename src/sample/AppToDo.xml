<?xml version="1.0" encoding="UTF-8"?>
<project name="todoapp" default="all">
  
  
  <property file="AppToDo.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*.yarb/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.swc"/>
    <include name="*.zip"/>
    <include name="*.ear"/>
    <include name="*.egg"/>
    <include name="*.ane"/>
    <include name="*.jar"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.8" value="${jdk.home.1.8}/bin"/>
  <path id="jdk.classpath.1.8">
    <fileset dir="${jdk.home.1.8}">
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/ext/cldrdata.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/jaccess.jar"/>
      <include name="jre/lib/ext/jfxrt.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/nashorn.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunpkcs11.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/jfxswt.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.8}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.8}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.8"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.libs.classpath">
    <fileset dir="${basedir}/src/libs">
      <patternset refid="library.patterns"/>
    </fileset>
  </path>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm-all.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module ToDoApp -->
  
  <dirname property="module.todoapp.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.todoapp" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.todoapp" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.todoapp" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.todoapp" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="todoapp.output.dir" value="${module.todoapp.basedir}/out/production/ToDoApp"/>
  <property name="todoapp.testoutput.dir" value="${module.todoapp.basedir}/out/test/ToDoApp"/>
  
  <path id="todoapp.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="todoapp.module.production.classpath">
    <path refid="${module.jdk.classpath.todoapp}"/>
    <path refid="library.libs.classpath"/>
  </path>
  
  <path id="todoapp.runtime.production.module.classpath">
    <pathelement location="${todoapp.output.dir}"/>
    <path refid="library.libs.classpath"/>
  </path>
  
  <path id="todoapp.module.classpath">
    <path refid="${module.jdk.classpath.todoapp}"/>
    <pathelement location="${todoapp.output.dir}"/>
    <path refid="library.libs.classpath"/>
  </path>
  
  <path id="todoapp.runtime.module.classpath">
    <pathelement location="${todoapp.testoutput.dir}"/>
    <pathelement location="${todoapp.output.dir}"/>
    <path refid="library.libs.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.todoapp">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.todoapp">
    <patternset refid="excluded.from.module.todoapp"/>
  </patternset>
  
  <path id="todoapp.module.sourcepath">
    <dirset dir="${module.todoapp.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.todoapp" depends="compile.module.todoapp.production,compile.module.todoapp.tests" description="Compile module ToDoApp"/>
  
  <target name="compile.module.todoapp.production" depends="register.custom.compilers" description="Compile module ToDoApp; production classes">
    <mkdir dir="${todoapp.output.dir}"/>
    <javac2 destdir="${todoapp.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.todoapp}/javac">
      <compilerarg line="${compiler.args.todoapp}"/>
      <bootclasspath refid="todoapp.module.bootclasspath"/>
      <classpath refid="todoapp.module.production.classpath"/>
      <src refid="todoapp.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.todoapp"/>
    </javac2>
    
    <copy todir="${todoapp.output.dir}">
      <fileset dir="${module.todoapp.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.todoapp.tests" depends="register.custom.compilers,compile.module.todoapp.production" description="compile module ToDoApp; test classes" unless="skip.tests"/>
  
  <target name="clean.module.todoapp" description="cleanup module">
    <delete dir="${todoapp.output.dir}"/>
    <delete dir="${todoapp.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.todoapp" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.todoapp" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.todoapp" value="${basedir}/out/artifacts/ToDoApp"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="temp.jar.path.ToDoApp.jar" value="${artifacts.temp.dir}/ToDoApp.jar"/>
    <property name="temp.jar.path.ToDoApp.jar2" value="${artifacts.temp.dir}/1/ToDoApp.jar"/>
    <mkdir dir="${artifacts.temp.dir}/1"/>
  </target>
  
  <target name="artifact.todoapp" depends="init.artifacts, compile.module.todoapp" description="Build &#39;ToDoApp&#39; artifact">
    <property name="artifact.temp.output.todoapp" value="${artifacts.temp.dir}/ToDoApp"/>
    <mkdir dir="${artifact.temp.output.todoapp}"/>
    <jar destfile="${temp.jar.path.ToDoApp.jar2}" duplicate="preserve" filesetmanifest="mergewithoutmain">
      <zipfileset dir="${todoapp.output.dir}"/>
    </jar>
    <jar destfile="${temp.jar.path.ToDoApp.jar}" duplicate="preserve" filesetmanifest="mergewithoutmain">
      <zipfileset file="${temp.jar.path.ToDoApp.jar2}"/>
      <zipfileset file="${basedir}/META-INF/MANIFEST.MF" prefix="META-INF"/>
    </jar>
    <copy file="${temp.jar.path.ToDoApp.jar}" tofile="${artifact.temp.output.todoapp}/ToDoApp.jar"/>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.todoapp" description="Build all artifacts">
    <mkdir dir="${artifact.output.todoapp}"/>
    <copy todir="${artifact.output.todoapp}">
      <fileset dir="${artifact.temp.output.todoapp}"/>
    </copy>
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>